t = int(input())
for _ in range(t):
    n = int(input())
    a = list(map(int, input().split()))
    b = list(map(int, input().split()))
    # your code goes here
    best = 0
    for i in range(1,n):
        if a[i]>a[best]:
            best=i
        elif a[i]==a[best] and b[i]>b[best]:
            best=i
    print(best+1)
-----------------------------------------------
#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);
    while (t--) {
        int n;
        scanf("%d", &n);
        int a[n], b[n];
        for (int i = 0; i < n; i++) {
            scanf("%d", &a[i]);
        }
        for (int i = 0; i < n; i++) {
            scanf("%d", &b[i]);
        }
        // your code goes here
        int best = 0;
    for (int i = 1; i < n; i++) {
            if (a[i] > a[best]) {
                best = i;
            } else if (a[i] == a[best] && b[i] > b[best]) {
                best = i;
            }
        }
        printf("%d\n", best + 1);
    }
    
    return 0;
}
