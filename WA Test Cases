#include <stdio.h>
#include <limits.h> 

int main() {
    int t;
    scanf("%d", &t);
    
    while (t--) {
        int n;
        scanf("%d", &n);
        int s[n];  
        for (int i = 0; i < n; i++) {
            scanf("%d", &s[i]);
        }
        
        char v[n+1];  
        scanf("%s", v);  
        int min_val = INT_MAX; 
        for (int i = 0; i < n; i++) {
            if (v[i] == '0') {
                if (s[i] < min_val) {
                    min_val = s[i];
                }
            }
        }
        if (min_val == INT_MAX) {
            printf("-1\n"); 
        } else {
            printf("%d\n", min_val); 
        }
    }

    return 0;  
}
------------------------------------------------------------------------------------
t = int(input())
for _ in range(t):
    n = int(input())
    s = list(map(int, input().split()))
    v = input()
    fail = []
    for i in range(n):
        if v[i]=='0':
            fail.append(s[i])
    print(min(fail))

